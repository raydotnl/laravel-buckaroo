{
    "name": "raydotnl/laravel-buckaroo",
    "description": "Laravel Buckaroo package",
    "keywords": [
        "raydotnl",
        "laravel-buckaroo"
    ],
    "homepage": "https://github.com/raydotnl/laravel-buckaroo",
    "license": "MIT",
    "authors": [
        {
            "name": "Sjoerd Rutten",
            "email": "sjoerd@ray.nl",
            "homepage": "https://ray.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "laravel/framework": "^7.21",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Raydotnl\\LaravelBuckaroo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Raydotnl\\LaravelBuckaroo\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Raydotnl\\LaravelBuckaroo\\Providers\\BuckarooServiceProvider"
            ],
            "aliases": {
                "Buckaroo": "Raydotnl\\LaravelBuckaroo\\BuckarooFacade"
            }
        }
    }
}
